uint64: varg_test(...)
{
    for (uint64: i = 0; i < argc; ++i) {
        "%d: %s ", i, (int8*)argv[i];
    }

    '\n';

    return argc;
}

uint64: n = varg_test("hello", "this", "is", "a", "test");
"%d args passed\n", n;

// hello this is a test
// 5 args passed

